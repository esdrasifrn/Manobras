@{
    ViewData["Title"] = "Carros cadastrados";
}

<div class="row">
    <div class="col-12 text-left">
        <a id="btn_add_ativo" href="/Carro/Adicionar" class="mb-2 btn btn-success"><i class="fa fa-user"></i> Adicionar Carro</a>
    </div>
</div>


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">@ViewData["Title"] </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <div class="table-responsive">
                                <table id="data-table" class="table table-striped table-bordered text-nowrap w-100">
                                    <thead>
                                        <tr>
                                            <th>ID</th> <!-- ocultada pelo datatable -->
                                            <th>Marca</th>
                                            <th>Modelo</th>
                                            <th>Placa</th>
                                            <th style="width: 5% !important" class="sorting_desc_disabled sorting_asc_disabled text-left">Ações</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
        <script src="~/js/datatable-generator.js"></script>
        <script>
            $(document).ready(function () {
                generateDataTable('#data-table',
                    'carro',
                    '/Carro/ListaCarros',
                    true,
                    "/Carro/Editar/?carroId=",
                    true,
                    "/Carro/Excluir/?carroId=");
            });
        </script>
    }
